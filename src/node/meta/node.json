{
    "node": {
        "use": [
            "node-base",
            "node-pluginhost",
            "node-screen",
            "node-style"
        ],

        "plugins": {
            "align-plugin": {
                "requires": [
                    "node-screen",
                    "node-pluginhost"
                ]
            },
            "node-event-simulate": {
                "requires": [
                    "node-base",
                    "event-simulate",
                    "gesture-simulate"
                ]
            },
            "shim-plugin": {
                "requires": [
                    "node-style",
                    "node-pluginhost"
                ]
            },
            "node-load": {
                "requires": [
                    "node-base",
                    "io-base"
                ]
            },

            "node-deprecated": {
                "requires": [
                    "node-base"
                ]
            }
        },
        "submodules": {
            "node-core": {
                "requires": [
                    "dom-core",
                    "selector",
                    "eventx-dom"
                ]
            },
            "node-base": {
                "requires": [
                    "node-core",
                    "dom-base"
                ]
            },
            "node-event-html5": {
                "requires": [
                    "node-base"
                ]
            },
            "node-pluginhost": {
                "requires": [
                    "node-base",
                    "pluginhost"
                ]
            },
            "node-screen": {
                "requires": [
                    "dom-screen",
                    "node-base"
                ]
            },
            "node-style": {
                "requires": [
                    "dom-style",
                    "node-base"
                ]
            }
        }
    }
}
